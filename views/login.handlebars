{{#section 'title'}}{{__ 'Login' }}{{/section}}

{{#section 'stylesheet'}}
	<link rel="stylesheet" href="css/login.css">
{{/section}}

<div class="container">
	<ul class="nav nav-tabs" role="tablist">
	  <li class="nav-item">
	    <a class="nav-link active" href="/login">{{__ 'Login' }}</a>
	  </li>
	  <li class="nav-item">
	    <a class="nav-link" href="/register">{{__ 'Sign up' }}</a>
	  </li>
	</ul>

	<div id="login">
		<form class="form-signin" action="" method="post">
			{{#if error}}
				<div class="alert alert-danger" role="alert">{{ error }}</div>
			{{/if}}

			<h4 class="form-signin-heading">{{__ 'Log in to GroBro.' }}</h4>
			<label for="email" class="sr-only">{{__ 'Email' }}</label>
			<input type="email" name="email" class="form-control" placeholder="{{__ 'Email' }}" required autofocus>
			<label for="password" class="sr-only">{{__ 'Password' }}</label>
			<input type="password" name="password" class="form-control" placeholder="{{__ 'Password' }}" required>
			<button class="btn btn-lg btn-primary btn-block" type="submit">{{__ 'Log in' }}</button>
		</form>
	</div>
</div>